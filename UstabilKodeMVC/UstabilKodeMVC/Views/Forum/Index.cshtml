@model UstabilKodeMVC.Models.ForumViewModels.PostsUsers

@{
    ViewData["Title"] = "Home Page";
}

    <div class="forum-wrapper">
        <h1>Forum</h1>
        <a class="btn btn-outline-secondary mt-2 mb-5" asp-controller="Post" asp-action="Create">Opret opslag</a>

        @{
            for (int i = 0; i < Model.Posts.Count; i++)
            {
                <div class="row">
                    <div class="col-2">
                        <h5>@Model.Posts[i].Title</h5>
                    </div>
                    <div class="col-3">
                        <h5>@Model.Usernames[i]</h5>
                    </div>
                    <div class="col-2">
                        <a class="btn btn-outline-primary" asp-controller="Post" asp-action="Get" asp-route-id="@Model.Posts[i].ID">Se opslag</a>
                    </div>
                </div>
            }
        }
    </div>


